{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strict": true,
    "pretty": true,
    "allowJs": true,
    "removeComments": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*.ts" ]
}
